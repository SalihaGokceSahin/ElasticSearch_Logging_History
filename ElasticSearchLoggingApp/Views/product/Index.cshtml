@model List<ElasticSearchLoggingApp.Models.products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_Layout.cshtml";
}

<h2>Product List</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Product id</th>
            <th>Product name</th>
            <th>Category id</th>
            <th>Product Price</th>
            <th>Product Count</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.categories_id</td>
                <td>@item.price</td>
                <td>@item.count</td>
                <td>@Html.ActionLink("click to edit","edit",new { id=item.id})</td>
            </tr>
        }
    </tbody>
</table>

